<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <android.support.design.widget.CoordinatorLayout
            android:id="@+id/cardCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_custom_category"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:paddingBottom="10dp"
           >

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:id="@+id/layoutCategory"
        >
            <RelativeLayout
                    android:id="@+id/relativeLayoutNumberSuppliers"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_category"
                    android:padding="5dp"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/imageCategory"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/titleCategory"
                    android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintVertical_bias="1.0">

                <TextView android:id="@+id/numberSupplier"
                          android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="2000 suppliers"
                          android:textSize="14sp"
                          android:textColor="@color/white" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
            </RelativeLayout>


            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/handyman_1"
                       android:id="@+id/imageCategory"
                       android:layout_alignParentStart="true" android:layout_centerVertical="true"
                       android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="parent"
                       android:layout_marginLeft="4dp" android:layout_marginBottom="8dp"
                       app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintVertical_bias="1.0" android:layout_alignParentLeft="true"/>


            <TextView
                    android:id="@+id/titleCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    tools:text="Handyman"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_below="@+id/numberSupplier"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    app:layout_constraintBottom_toTopOf="@+id/descriptionCategory"
                    android:layout_marginBottom="12dp" android:layout_marginEnd="168dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="168dp"
                    app:layout_constraintStart_toEndOf="@+id/imageCategory" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"
                    tools:ignore="NotSibling"/>

            <TextView
                    android:id="@+id/descriptionCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="dsfgghsfdgh cvbnvcbn nvcbn vbn vbnn"
                    android:textColor="@color/white"
                    android:layout_below="@+id/titleCategory"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintTop_toBottomOf="@+id/imageCategory" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageCategory" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"

                    android:layout_alignParentRight="true"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</merge>