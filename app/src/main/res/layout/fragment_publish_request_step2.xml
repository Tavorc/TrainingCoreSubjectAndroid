<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView android:layout_width="match_parent" android:layout_height="145dp"
               android:src="@drawable/handyman_photo"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"

               app:layout_constraintStart_toStartOf="parent"
               android:scaleType="centerCrop" android:id="@+id/imageView"
               android:layout_alignParentTop="true"
        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/what_is_the_skills_that_you_request"
              android:textSize="18sp"
              android:textColor="@color/blue" android:id="@+id/textView2"
              android:layout_alignBottom="@+id/imageView"
              android:layout_marginBottom="-37dp" android:layout_marginTop="13dp"
              android:layout_below="@+id/imageView"
              android:layout_marginStart="20dp"
              android:layout_marginLeft="20dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

              android:text="@string/select_one_category_from_the_next_category"
              android:textSize="14sp"
              android:textColor="@color/azure_primary"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="152dp" android:layout_marginStart="20dp"
              app:layout_constraintHorizontal_bias="0.048" app:layout_constraintTop_toBottomOf="@+id/textView2"
              android:layout_marginTop="35dp" android:id="@+id/textView5"
              android:layout_alignParentStart="true" android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
              android:layout_marginEnd="152dp" android:layout_below="@+id/textView2"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleViewSubcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/textView5" android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
    android:layout_marginStart="20dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
